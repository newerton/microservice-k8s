apiVersion: v1
kind: Service
metadata:
  namespace: {{ include "app.namespace" . }}
  name: api-gateway
  labels:
    {{- include "app.labels" . | nindent 4 }}
spec:
  ports:
    - port: {{ .Values.microservices.APIGateway.port }}
      targetPort: {{ .Values.microservices.APIGateway.targetPort }}
  selector:
    {{- include "app.selectorLabels" . | nindent 4 }}